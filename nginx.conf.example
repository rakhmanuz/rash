# Nginx Configuration for RASH Application
# Bu faylni nginx/conf/nginx.conf ga ko'chiring yoki include qiling

server {
    listen 80;
    server_name rash.uz www.rash.uz;

    # Log fayllar
    access_log logs/rash_access.log;
    error_log logs/rash_error.log;

    # Client body size limit (rasm yuklash uchun)
    client_max_body_size 10M;

    # Static fayllar (Next.js .next/static)
    location /_next/static {
        alias C:/IQMax/.next/static;
        expires 365d;
        add_header Cache-Control "public, immutable";
    }

    # Uploads fayllar
    location /uploads {
        alias C:/IQMax/public/uploads;
        expires 30d;
        add_header Cache-Control "public";
    }

    # Boshqa barcha so'rovlar Next.js server'ga
    location / {
        proxy_pass http://localhost:3000;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_cache_bypass $http_upgrade;
        
        # Timeout sozlamalari
        proxy_connect_timeout 60s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;
    }
}

